{{> header}}

<div>

  <h2>Kontoer</h2>

    <div>
      <p>Dine kontoer:</p>
      <ul>
        {{#user.accounts}}
        <li>
          <a href="/simple/accounts/{{id}}">{{id}} - {{name}} - {{balance}} NOK</a>
        </li>
        {{/user.accounts}}
      </ul>
    </div>



    <div style="margin-top: 4rem;">
      <p>Legg til ny konto:</p>
      <div style="padding: 1rem; width: 15rem; border: 1px solid;">


        <form action="/simple/accounts" method="post">
          <div class="centered">
            <label for="name">Navn <small>(obligatorisk)</small></label><br />
            <input style="width: 12rem;" type="text" name="name" id="name" required>
          </div>

          <div class="centered mt-1">
            <label for="balance">Saldo [NOK]</label><br />
            <input style="width: 12rem;" type="number" name="balance" id="balance" value="100000" min="0"
              max="3000000000">NOK
          </div>

          <div class="centered mt-1">
            <label for="minCommissionFee">Minstekurtasje [NOK]</label><br />
            <input style="width: 8rem;" type="number" name="minCommissionFee" id="minCommissionFee" value="1" min="0"
              max="100000" step="1">NOK
          </div>

          <div class="centered mt-1">
            <label for="commissionFee">Kurtasje [%]</label><br />
            <input style="width: 8rem;" type="number" name="commissionFee" id="commissionFee" value="0.04" min="0"
              max="99" step="0.001">%
          </div>

          <div class="centered mt-1">
            <label for="currencySpread">Valutaspread [%]</label><br />
            <input style="width: 8rem;" type="number" name="currencySpread" id="currencySpread" value="0.075" min="0"
              max="99" step="0.001">%
          </div>

          <div class="mt-2">
            <input style="width: 12rem;" type="submit" value="Opprett konto">
          </div>
        </form>

      </div>
    </div>

</div>

{{> footer}}